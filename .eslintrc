{
  "plugins": ["cypress"],
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": ["react-app", "eslint:recommended", "plugin:cypress/recommended", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "globals": {
    "test": true,
    "expect": true,
    "describe": true,
    "beforeAll": true,
    "beforeEach": true,
    "process": true,
    "afterAll": true
  },
  "rules": {
    "indent": ["off", 2],
    "comma-dangle": ["error", "always-multiline"],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single", "avoid-escape"],
    "semi": ["error", "never"],
    "@typescript-eslint/no-unused-vars": "error",
    "@typescript-eslint/semi": ["error", "never"],
    "@typescript-eslint/member-delimiter-style": [
      "error",
      {
        "multiline": {
          "delimiter": "none",
          "requireLast": false
        },
        "singleline": {
          "delimiter": "semi",
          "requireLast": false
        },
        "multilineDetection": "brackets"
      }
    ],
    "eqeqeq": "error",
    "no-trailing-spaces": "error",
    "object-curly-spacing": ["error", "always"],
    "arrow-spacing": [
      "error",
      {
        "before": true,
        "after": true
      }
    ],
    "no-console": 0,
    "jsx-a11y/accessible-emoji": "off"
  }
}
